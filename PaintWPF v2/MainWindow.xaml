<Window x:Class="PaintWPF_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintWPF_v2"
        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="850">
    <Grid Background="#FFCAD0FF" Margin="0,0,0,-10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="850"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="697" Margin="10,10,0,0">
            <InkCanvas x:Name="InkCanvas1" HorizontalAlignment="Left" Width="700" Height="400" VerticalAlignment="Top" Margin="20,20,20,20" >
                <InkCanvas.DefaultDrawingAttributes >
                    <DrawingAttributes
                        Color = "Black" Height ="2"  Width = "2" />
                </InkCanvas.DefaultDrawingAttributes>
            </InkCanvas>
        </ScrollViewer>
        <StackPanel Margin="730,10,29.6,0" Background="White" Height="400" VerticalAlignment="Top">
            <Grid Height="90" Width="90">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Grid.Row="0" x:Name="Open" Click="Open_Click">
                    <Image Source="Images/Open.png"/>
                </Button>
                <Button Grid.Column="1" Grid.Row="0" x:Name="Save" Click="Save_Click">
                    <Image Source="Images/Save.png"/>
                </Button>
                <Button Grid.Column="2" Grid.Row="0" x:Name="Clear" Click="Clear_Click">
                    <Image Source="Images/Clear.png"/>
                </Button>
                <Button Grid.Column="0" Grid.Row="1" x:Name="ClearingTool" Click="ClearingTool_Click">
                    <Image Source="Images/Lastik.png"/>
                </Button>
            </Grid>
            <TextBlock TextWrapping="Wrap" Text="Размер холста:" Height="20" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="HeightCanvas"  Height="20" TextWrapping="Wrap" Text="400"/>
            <TextBox x:Name="WidthCanvas" Height="20" TextWrapping="Wrap" Text="700"/>
            <Button x:Name="Resize" Height="25" Content="Изменить" Click="Resize_Click"/>

            <TextBlock TextWrapping="Wrap" Text="Выберите цвет:" Height="20" TextAlignment="Center"/>
            <Grid Height="120" Width="90"  Margin ="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Grid.Row="0" Name="Black" Background="Black" Height="30" Width="30" Grid.ColumnSpan="2" Margin="0,0,29.2,0" VerticalAlignment="Top" Click="Black_Click"/>
                <Button Grid.Column="1" Grid.Row="0" Name="Gray" Background="Gray" Height="30" Width="30" Click="Gray_Click" />
                <Button Grid.Column="2" Grid.Row="0" Name="White" Background="White" Height="30" Width="30" Click="White_Click" />
                <Button Grid.Column="0" Grid.Row="1" Name="Red"  Background="Red" Height="30" Width="30" Click="Red_Click" />
                <Button Grid.Column="1" Grid.Row="1" Name="Orange" Background="Orange" Height="30" Width="30" Click="Orange_Click" />
                <Button Grid.Column="2" Grid.Row="1" Name="Yellow" Background="Yellow" Height="30" Width="30" Click="Yellow_Click" />
                <Button Grid.Column="0" Grid.Row="2" Name="Pink" Background="HotPink" Height="30" Width="30" Click="Pink_Click" />
                <Button Grid.Column="1" Grid.Row="2" Name="Green" Background="Green" Height="30" Width="30" Click="Green_Click" />
                <Button Grid.Column="2" Grid.Row="2" Name="Aquamarine" Background="Aquamarine" Height="30" Width="30" Click="Aquamarine_Click" />
                <Button Grid.Column="0" Grid.Row="3" Name="SkyBlue" Background="DeepSkyBlue" Height="30" Width="30" Click="SkyBlue_Click" />
                <Button Grid.Column="1" Grid.Row="3" Name="Blue" Background="Blue" Height="30" Width="30" Click="Blue_Click" />
                <Button Grid.Column="2" Grid.Row="3" Name="Purple" Background="Purple" Height="30" Width="30" Click="Purple_Click" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
